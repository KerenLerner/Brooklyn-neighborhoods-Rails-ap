<p id="notice"><%= notice %></p>

<h1>Listing Neighborhoods</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rent</th>
      <th>Park</th>
      <th>Activities</th>
      <th>Architecture</th>
      <th>Commute</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @neighborhoods.each do |neighborhood| %>
      <tr>
        <td><%= neighborhood.name %></td>
        <td><%= neighborhood.rent %></td>
        <td><%= neighborhood.park %></td>
        <td><%= neighborhood.activities %></td>
        <td><%= neighborhood.architecture %></td>
        <td><%= neighborhood.commute %></td>
        <td><%= link_to 'Show', neighborhood %></td>
        <td><%= link_to 'Edit', edit_neighborhood_path(neighborhood) %></td>
        <td><%= link_to 'Destroy', neighborhood, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

